<?xml version="1.0" encoding="UTF-8"?>
<!-- configuration file for LogBack (slf4J implementation)
See here for more details: http://gordondickens.com/wordpress/2013/03/27/sawing-through-the-java-loggers/ -->
<configuration scan="true" scanPeriod="30 seconds">

	<!-- 외부설정 파일을 사용할 수 있다. -->
	<property resource="properties/log.properties"/>
	
    <!-- To enable JMX Management -->	
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- <pattern>%-5level %logger{0} - %msg%n</pattern> -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<file>${APP_HOME}/mari-webapp.log</file>
    	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
    		<!-- 파일이 1개씩 생성된다. -->
    		<fileNamePattern>${APP_HOME}/mari-webapp.%d{yyyy-MM-dd}.log</fileNamePattern>
    		<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
    			<maxFileSize>100MB</maxFileSize>
    		</timeBasedFileNamingAndTriggeringPolicy>
    		<!-- 15일이 지난 로그파일은 삭제된다. -->
    		<maxHistory>15</maxHistory>
    	</rollingPolicy>
    	<encoder>
    		<pattern>
    			%-4relative %d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n
    		</pattern>
    	</encoder>
    </appender>

	<logger name="org.apache" level="info" />
	<logger name="org.springframework" level="info" />
	<logger name="net.ma.ri.*" level="debug" />
    
    <if condition='property("MODE").equals("SERVICE")'>
    	<then>
		    <root level="info">
		        <appender-ref ref="console"/>
		        <appender-ref ref="FILE"/>
		    </root>
	    </then>
	    <else>
	    	<root level="debug">
		        <appender-ref ref="console"/>
		        <appender-ref ref="FILE"/>
		    </root>
	    </else>
    </if>
    
</configuration>
